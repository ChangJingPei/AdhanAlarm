<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/selectedRow" />
        </shape>
    </item>
    <item android:top="-2dp" android:end="-2dp" android:start="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:color="@color/rowDivider" android:width="1dp"/>
        </shape>
    </item>
    <item android:top="-3dp" android:start="-3dp" android:bottom="-3dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:color="@color/colorAccent" android:width="3dp"/>
        </shape>
    </item>
</layer-list>